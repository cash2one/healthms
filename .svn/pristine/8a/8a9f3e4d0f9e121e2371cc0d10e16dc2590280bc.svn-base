{% extends "base.html" %}

{% block info %}
active
{% endblock %}

{% block container %}
  
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="panel panel-default healthms-container">
      <div class="panel-body">
        <div class="page-header">
          <h1 class="text-center">{{ info[2] }}</h1>
          <p class="text-muted text-center">发表时间：{{ info[6].strftime('%Y-%m-%d') }}&nbsp;&nbsp;&nbsp;&nbsp;文章热度：{{ info[4] }}</p>
        </div>
        <div class="row healthms-info-contanter">
          <div class="col-md-12">
              {{ info[3]|safe }}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% endblock %}